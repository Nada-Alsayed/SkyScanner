<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:id="@+id/conAl"
    android:background="@drawable/rounded_button">

    <TextView
        android:id="@+id/timeStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="2:50 AM"
        android:textColor="@color/white"
        android:textSize="19sp"
android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txtStartDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="4/7"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/timeStartDate"
        app:layout_constraintStart_toStartOf="@+id/timeStartDate"
        app:layout_constraintTop_toBottomOf="@+id/timeStartDate" />
    <TextView
        android:id="@+id/column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:padding="10dp"
        android:text=":"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/timeStartDate"
        app:layout_constraintEnd_toStartOf="@+id/timeEndDate"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/timeEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="2:50 AM"
        android:textColor="@color/white"
        android:textSize="19sp"

        app:layout_constraintStart_toEndOf="@+id/column"
        app:layout_constraintTop_toTopOf="@+id/timeStartDate" />
    <TextView
        android:id="@+id/txtEndDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="4/7"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/timeEndDate"
        app:layout_constraintStart_toStartOf="@+id/timeEndDate"
        app:layout_constraintTop_toBottomOf="@+id/timeEndDate" />
    <ImageView
        android:id="@+id/iconDel"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginEnd="3dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_delete_outline_24"/>
</androidx.constraintlayout.widget.ConstraintLayout>